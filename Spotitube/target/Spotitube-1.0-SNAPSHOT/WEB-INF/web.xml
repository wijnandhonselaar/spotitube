<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         metadata-complete="false"
         version="3.1">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>oose.dea.frontend.controllers.SearchPlaylistController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/playlist/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>view</servlet-name>
        <servlet-class>oose.dea.frontend.controllers.ViewPlaylistController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>view</servlet-name>
        <url-pattern>/playlist/view</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>create</servlet-name>
        <servlet-class>oose.dea.frontend.controllers.CreatePlaylistController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>create</servlet-name>
        <url-pattern>/playlist/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add-track</servlet-name>
        <servlet-class>oose.dea.frontend.controllers.AddTrackToPlaylistController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add-track</servlet-name>
        <url-pattern>/playlist/add-track</url-pattern>
    </servlet-mapping>

</web-app>